{
  "name": "refuge-chat-api",
  "version": "1.0.0",
  "main": "server.js",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "start": "node src/server.js",
    "dev": "nodemon src/server.js"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/__tests__/**/*.test.js",
      "**/?(*.)+(spec|test).js"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Anchellon/refuge-chat-api.git"
  },
  "keywords": [
    "ollama",
    "chat",
    "api",
    "llm"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Anchellon/refuge-chat-api/issues"
  },
  "homepage": "https://github.com/Anchellon/refuge-chat-api#readme",
  "description": "Chat API with Ollama integration",
  "dependencies": {
    "axios": "^1.13.4",
    "cors": "^2.8.6",
    "dotenv": "^17.2.3",
    "express": "^5.2.1",
    "knex": "^3.1.0",
    "pdfjs-dist": "^5.4.624",
    "pg": "^8.18.0"
  },
  "devDependencies": {
    "jest": "^30.2.0",
    "nodemon": "^3.0.1"
  }
}
